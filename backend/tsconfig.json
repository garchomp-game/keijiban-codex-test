{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false
  }
}
