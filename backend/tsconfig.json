{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "strict": false
  },
  "include": [
    "src/main.ts",
    "src/app.module.ts",
    "src/prisma/**/*.ts",
    "src/users/**/*.ts",
    "src/rooms/**/*.ts",
    "src/messages/**/*.ts"
  ],
  "exclude": ["test/**/*", "dist/**/*", "node_modules/**/*"]
}
